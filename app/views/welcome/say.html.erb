<h2><%= link_to "jQuery Click", "#", :id => "jquery-load" %></h2>

<div id="content"></div>

<h2><%= link_to "Ajax Test", something_path, :id => "ajax-load" %></h2>


<%= link_to "back to welcome", welcome_path %>

<script>
  $("#jquery-load").on("click", function(e){
    e.preventDefault();
    alert("click!");
  });

  $("#ajax-load").on("click", function(e){
    e.preventDefault();
    var url = $(this).attr("href");
    $.ajax({
      url: url,
      success: function(data){
        $("#content").html(data);
      }
    });
  });

</script>